{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Example Debug",
            "type": "shell",
            "command": "odin build example -debug -out:bin/example.exe",
            "group": "build",
            "dependsOn": "Create bin dir",
        },
        {
            "label": "Build Example Release",
            "type": "shell",
            "command": "odin build example -release -out:bin/example.exe",
            "group": "build",
            "dependsOn": "Create bin dir",
        },
        {
            "label": "Create bin dir",
            "type": "shell",
            "command": "python -c \\\"import os; os.makedirs('bin', exist_ok=True)\\\"",
        }
    ]
}